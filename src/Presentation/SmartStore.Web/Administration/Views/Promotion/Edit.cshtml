@model PromotionModel
@{
    //page title
    ViewBag.Title = T("Admin.Promotions.EditPromotionDetails").Text;
}
@using SmartStore.Admin.Models.Promotions
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            Edit Promotions - @Html.ActionLink("(" + "back to Promotion list" + ")", "List")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")</button>
            <button type="submit" name="save" value="save-continue" class="btn">@T("Admin.Common.SaveContinue")</button>
            <span id="Promotion-delete" class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp;@T("Admin.Common.Delete")</span>
        </div>
    </div>

    Html.RenderPartial("_CreateOrUpdate", Model); 
}
@Html.DeleteConfirmation("Promotion-delete")